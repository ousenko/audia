# Copy this file to .env and set your actual values
# All settings are now managed through environment variables (no config.yaml needed)

# OpenAI-compatible API settings
OPENAI_API_URL=https://api.openai.com/v1/chat/completions
OPENAI_API_KEY=your-api-key-here
OPENAI_MODEL=gpt-4o-mini

# AI Processing settings (minimal configuration - API uses defaults)

# Transcript chunking settings (400k characters - very large transcripts)
CHUNK_SIZE=400000

# Transcription settings
DEFAULT_MODEL=large-v3-turbo
DEFAULT_LANGUAGE=ru
BATCH_SIZE=8
QUANTIZATION=false

# Output settings
DEFAULT_FORMAT=md
INCLUDE_TIMESTAMPS=true

# Processing options
DEFAULT_PROMPT_TYPE=meeting_notes

# SSL settings for corporate environments (affects both model downloads and API requests)
AUDIA_NO_SSL_VERIFY=false
